<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    android:orientation="vertical"
    tools:context=".BoardGameActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/tvPlayerOne"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Player 1"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvPlayerOneScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvPlayerOne"
            android:text="0"/>

        <TextView
            android:id="@+id/tvPlayerOneMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvPlayerOne"
            android:layout_below="@id/tvPlayerOne"
            android:layout_centerVertical="true"
            android:text="0"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvPlayerTwo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Player 2"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tvPlayerTwoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvPlayerTwo"
            android:text="0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@id/tvPlayerOne"
            android:layout_toLeftOf="@id/tvPlayerOneMoves"
            android:layout_toRightOf="@id/tvPlayerOneScore"
            android:text="Score/Moves"
            android:layout_alignBottom="@id/tvPlayerOneScore"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvPlayerTwoDesc"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@id/tvPlayerTwo"
            android:layout_toRightOf="@id/tvPlayerTwoMoves"
            android:layout_toLeftOf="@id/tvPlayerTwoScore"
            android:text="Score/Moves"
            android:layout_alignBottom="@id/tvPlayerTwoScore"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvPlayerTwoMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvPlayerTwo"
            android:layout_below="@id/tvPlayerTwo"
            android:layout_centerVertical="true"
            android:text="0"
            android:textSize="22dp" />

    </RelativeLayout>

